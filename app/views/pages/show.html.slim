.panel.panel-default
  .page-header
    .right
      = link_to :back, class: "btn btn-default" do
        i.glyphicon.glyphicon-arrow-left Previous
      = link_to finish_page_path, class: "btn btn-danger" do
        = "Complete and continue"
        i.glyphicon.glyphicon-arrow-right
    = link_to course_path(@page.course), class: "btn btn-default" do
      i.glyphicon.glyphicon-circle-arrow-left
  .panel-body
    .container
      .col-md-4
        h3
          = @page.course.title
        = render "pages/pages", pages: @pages
      .col-md-8
        .row
          .col-md-10
            h2.text-center
              = @page. title
            - if @page.page_type == "Lecture"
              = raw(@page.body)
            - elsif @page.page_type == "Video"
                .embed-container
                  = embed(@page.body)
            - else
                - if @page.answers.first.answer_type == "Checkbox"
                  = simple_form_for(@user) do |f|
                    = f.simple_fields_for :users_answers, @user.users_answers.build do |ui|
                      = f.collection_check_boxes :answer_ids, @page.answers, :id, :answer_body do |i|
                        .collection-check-box
                          = i.check_box
                          = i.label
                    br
                    = f.submit "Ok" , class: "btn btn-primary"
                - elsif @page.answers.first.answer_type == "Radio"
                  = simple_form_for(@user) do |f|
                    = f.simple_fields_for :users_answers, @user.users_answers.build do |ui|
                      .radio_type
                        = f.collection_check_boxes :answer_ids, @page.answers, :id, :answer_body do |i|
                          .collection-check-box
                            = i.check_box
                            = i.label
                    = f.submit "Ok" , class: "btn btn-primary"
                - else
                  = simple_form_for  @input_user_answer do |a|
                    = a.input :user_answer_body,  label: false, placeholder: "Answer", required: true
                    = a.input :page_id, :as => :hidden, input_html: { value: @page.id }
                    = a.submit "Ok" , class: "btn btn-primary"